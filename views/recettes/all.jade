extends ../layout
block content

  h1 #{ title }

  ul.recettes
    each recette in recettes
      li
        span #{ recette.nom + ' - Ajout√©e le ' + recette.ajoute + ' - Par ' + recette.auteur }
          span Notes : #{ recette.notes }
          ul
            each tag in recette.hashtags
              li #{ tag }

        a(href=recette._id)