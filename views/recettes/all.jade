extends ../site/layout
block extend_head
  link(rel='stylesheet', href='/stylesheets/recettes.css')
block content

  h1 #{ title }

  ul.recettes
    each recette in recettes
      li
        .recette-container
          b.title #{ recette.nom }
          br
          span Ajoutée le #{ recette.ajoute.toISOString().substr(0, 10) }
          br
          span par #{ recette.auteur ? recette.auteur.local.pseudo : '' }
          ul.tags
            each hashtag in recette.hashtags
              li
                a.hashtag(href='/recettes/search/hashtag/' + hashtag.substr(1, hashtag.length - 1)) #{ hashtag }
          div
            .col-50
              a(href="detail/" + recette._id) Détail            
            .col-50
              .likes
                span.plus 10
                span.minus 5