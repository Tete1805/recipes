extends ../site/layout
block extend_head
block content

  h1 #{ title }

  table
    thead
      tr
        th Nom
        th Ajout√©e
        th Auteur
        th Actions
    tbody
      each recette in recettes
        tr
          td= recette.nom
          td= formatDate(recette.ajoute, "dateTime")
          td= recette.auteur
          td
            a(href='/recette/' + recette._id + '/delete') Supprimer
            a(href='/recette/' + recette._id + '/edit') Modifier